{
    "name": "Google Dictionary Word History Gadget",
    "version": "0.9",
    "description": "Organize the word history, and make it more valuable",
    "permissions": [
        "tabs",
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "options_page": "index.html",
    "browser_action": {
        "default_icon": {
            "16": "images/ic_launcher16.png",
            "32": "images/ic_launcher32.png",
            "48": "images/ic_launcher48.png",
            "128": "images/ic_launcher128.png"
        }
    },
    "icons": {
        "16": "images/ic_launcher16.png",
        "32": "images/ic_launcher32.png",
        "48": "images/ic_launcher48.png",
        "128": "images/ic_launcher128.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "manifest_version": 2
}